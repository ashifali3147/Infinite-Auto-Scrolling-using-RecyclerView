<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/frame_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/tab_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame_home"/>
    <ImageView
        android:id="@+id/loader"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/loader_2"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/test_anim"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/test_anim"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/ll_tab_menu"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:src="@drawable/home_button" />
    <LinearLayout
        android:id="@+id/ll_tab_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tab_home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/home_button"
            android:padding="5dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/tab_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/menu_button"
            android:padding="5dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/tab_order"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/order_button"
            android:padding="5dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/tab_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user_button"
            android:padding="5dp"
            android:layout_weight="1"/>
    </LinearLayout>



</RelativeLayout>