<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_700"
    tools:context=".MenuScreen">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Menu Screen" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/food_1"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/like"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:lottie_rawRes="@raw/fav_1"
            app:lottie_autoPlay="true"/>

        <ImageView
            android:id="@+id/double_tap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/like"
            android:layout_centerHorizontal="true"
            android:src="@drawable/user_button" />
        <RelativeLayout
            android:id="@+id/ll_like_dislike"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/double_tap"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle">

            <ImageView
                android:id="@+id/like_dislike"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="8dp"
                android:src="@drawable/favorite"
                app:tint="#777777" />
        </RelativeLayout>

    </RelativeLayout>




</FrameLayout>